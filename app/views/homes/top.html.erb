<p id="notice"><%= notice %></p>

<h1>勤怠App</h1>

<table>
  <thead>
    <tr>
      
      <th>開始時間</th>
      <th>終了時間</th>
      <th>メモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homes.each do |home| %>
      <tr>
        <td><%= home.start_time.strftime("%Y-%m-%d %H:%M") %> |</td>
        <td><%= home.finish_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= home.content %></td>
        <td><%= link_to 'Show', home %></td>
        <td><%= link_to 'Edit', edit_home_path(home.id) %></td>
        <td><%= link_to 'Destroy',home_path(home.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '時間を入れる', new_home_path %> 

<%= month_calendar events: @homes do |date, homes| %>
  
  <%= date.day %>
  <% homes.each do |home| %>
    <div>
      <%= home.start_time %>
      <%= home.finish_time %><br>
      <%= home.content %><br>
      <%= link_to "編集する", home %>
    </div>
  <% end %>

<% end %>